<!DOCTYPE html>
<html>
  <head>
    <title>Nailed It.</title>
    <%= csrf_meta_tags %>

    <link href="https://fonts.googleapis.com/css?family=Bungee|Montserrat" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div id='topbar'>
  		<div>
        <h1 id='logo'><a href='/'>nailed it.</a></h1>
      </div>


      <% if @current_user %>
        <h4 id='current_user'>Hi, <%= @current_user.username %></h4>
      <% end %>
      <% if !current_page?('/signup')%>
        <%= form_tag('/logout' , method: 'post', id: 'logout_button') do%>
          <%= submit_tag("logout") %>
        <% end %>
      <% end %>
  	</div>
  	<div class='space'></div>
    <div class='space'></div>
    <div class='space'></div>
    <%= yield %>
    <div class='space'></div>
    <div class='space'></div>
    <div class='space'></div>
  </body>
</html>
